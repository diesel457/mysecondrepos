.root
  background-position 0 0
  background-repeat no-repeat
  background-size 100% 100%
  width 100%
  min-height 300px
  color: $colors.whiteColor
  font-size 13px
  font-family 'Thin', arial, sans-serif
  display flex
  flex-direction column
  align-items center
  padding 50px 0 30px
  margin 40px 0 0
  position relative

  h1
    font-size 35px
    text-align center

  p
    margin 10px 0 0

  a
    color inherit
    text-decoration none

  .Btn
    margin 65px 0 0

.globalSearchLink
  display inline-block
  margin 10px 0 0

.-secondBg
  padding 0
  justify-content center
  height 400px
  background url('/img/see-bg2.png') no-repeat 0 100%

.createInform
  margin 20px 0 0

.edit
	background url('/img/edit.png') no-repeat 0 0
	background-size 100% 100%
	width 15px
	height 15px
	position absolute
	top 5px
	right 5px
