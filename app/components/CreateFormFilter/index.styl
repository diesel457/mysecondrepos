.root
  margin 25px 0

  h1
    color: $colors.blackColor
    margin 0 0 35px

  .Btn
    margin 40px 0 0
    &.-addBtn
      margin 0 0 0 10px

.inputBox
  display flex
  flex-direction column
  justify-content center
  margin 15px 0 0
  &:first-child
    margin 0

.addBox
  display flex
  align-items center
  margin 10px 0 0

.inputName
  font-size 14px
  color: $colors.blackColor
  min-width 200px

.inputArea
  border: 1px solid $colors.greyColor
  border-radius 3px
  padding 5px 15px
  flex 1
  max-width 250px
  resize none

.parametr
  margin 0 0 0 10px

.optionsTitle
  font-size 18px
  margin 25px 0 0
  color: $colors.blueColor
  font-family 'Thin', arial, sans-serif

.optionItem
  display flex
  align-items center
  margin 5px 0 0
  &:first-child
    margin 10px 0 0

.optionName
  color: $colors.blueColor
  font-size 15px
  margin 0 10px 0 0

.optionValue
  font-size 15px

.-textarea
  height 150px

.-borderNone
  border none
  padding 5px 0

.-optionsInput
  max-width 250px
  margin 0 15px 0 0

.filter
  display flex
  align-items center
  line-height 100%
  font-size 15px
  margin 10px 0 0

.icon
  color: $colors.blueColor
  font-size 20px
  line-height 0
  margin 0 5px 0 0
