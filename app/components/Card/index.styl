.root
	width 210px
	border: 1px solid $colors.greyColor
	border-radius 3px
	padding 25px 10px 10px
	margin 0 0 20px 18px
	display flex
	flex-direction column
	position relative

	.Btn
		margin 10px 0 0
		width 100%

.image
	width 100%
	height 100px
	display flex
	align-items center
	justify-content center
	margin 0 0 15px
	img
		display block
		max-width 100%
		height auto

.mark
	border: 1px solid $colors.orangeColor
	color: $colors.orangeColor
	border-radius 3px
	padding 0 5px
	position absolute
	top 5px
	left 5px

.name
	font-size 16px
	color: $colors.blackSecondColor

.description
	margin 5px 0 0
	font-size 13px
	height 100px
	overflow hidden

.inform
	display flex
	flex-direction column
	font-family 'Regular', arial, sans-serif
	background url('/img/size.png') no-repeat 0 50%
	padding 0 0 0 30px
	margin 10px 0 0

.link
	color: $colors.blueColor
	text-decoration none
	margin 10px 0 0

.price
	font-size 17px
	margin 20px 0 0
	font-family 'Regular', arial, sans-serif

.edit
	background url('/img/edit.png') no-repeat 0 0
	background-size 100% 100%
	width 15px
	height 15px
	position absolute
	top 5px
	right 5px
