.root
  margin 25px 0

  h1
    color: $colors.blackColor
    margin 0 0 35px

  .Btn
    margin 40px 0 0

.inputBox
  display flex
  align-items flex-start
  margin 15px 0 0
  &:first-child
    margin 0

.inputName
  font-size 14px
  color: $colors.blackColor
  min-width 200px

.inputArea
  border: 1px solid $colors.greyColor
  border-radius 3px
  padding 5px 15px
  flex 1
  max-width 350px
  resize none

.optionsTitle
  font-size 18px
  margin 25px 0 0
  color: $colors.blueColor
  font-family 'Thin', arial, sans-serif

.optionItem
  display flex
  align-items center
  margin 5px 0 0
  &:first-child
    margin 10px 0 0

.optionName
  color: $colors.blueColor
  font-size 15px
  margin 0 10px 0 0

.optionValue
  font-size 15px

.-textarea
  height 150px

.-borderNone
  border none
  padding 5px 0

.-optionsInput
  max-width 250px
  margin 0 15px 0 0

.slidesList
  display flex
  flex-direction column

.slide
  max-width 400px
  display flex
  align-items center
  flex-direction column
  margin 20px 0 0
  position relative
  &:hover
    .delete
      left 0
      top 0
      opacity 1
      
  img
    display block
    max-width 100%
    max-height 100%
    height auto

.title
.description
  margin 0 0 10px
  color: $colors.blackColor
  font 20px / 120% 'Thin', arial, sans-serif

.description
  font-size 14px

.delete
  transition opacity .2s linear
  position absolute
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  cursor pointer
  background-color: rgba(255, 255, 255, .8)
  left -9999px
  top -9999px
  opacity 0
