.root
	display flex
	flex-direction column

	h1
		color: $colors.blueColor
		font 30px / 120% 'Regular', arial, sans-serif
		margin 25px 0 0

	.Btn
		margin 12px 0 0

.informBox
	display flex
	justify-content space-between
	margin 25px 0 0

.images
.inform
	width 48%

.mainImage
	display flex
	justify-content center
	align-items center
	min-height 240px
	position relative
	img
		opacity 0
		max-width 100%
		max-height 100%
		&.-active
			opacity 1
			transition .3s linear

.imagesList
	display flex
	margin 20px 0 0

.imageBtn
	width 40px
	height 40px
	border: 1px solid $colors.lightBlueColor
	margin 0 0 0 10px
	cursor pointer
	padding 5px
	display flex
	align-items center
	justify-content center
	&:first-child
		margin 0
	img
		width 100%
		height auto
		display block

	&.-active
		position relative
		&:before
		&:after
			content ''
			position absolute
			left 50%
			top -14px
			border 7px solid transparent
			border-bottom: 7px solid $colors.lightBlueColor
			margin 0 0 0 -7px

		&:after
			border-bottom: 7px solid $colors.whiteColor
			top -13px

.mark
	border: 1px solid $colors.orangeColor
	color: $colors.orangeColor
	border-radius 3px
	padding 0 5px
	position absolute
	top 0
	left 0

.currency
	font-size 15px

.priceValue
	font-size 30px
	line-height 100%
	letter-spacing 2px

.optionsList
	display flex
	flex-direction column
	margin 10px 0 0

.option
	display flex
	align-items center
	font-size 14px
	font-family 'Thin', arial, sans-serif
	margin 5px 0 0

.parametr
	margin 0 0 0 5px

.marker
	font-size 25px
	line-height 0
	color: $colors.blueColor
	margin 0 15px 0 0

.description
	margin 15px 0 0
