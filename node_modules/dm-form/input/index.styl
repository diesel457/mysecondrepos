{C}
  display flex
  &-left
    flex 1
  &-right
    flex 2
  &-right
    padding 10px
  &-left
    _padding = 10px
    padding-left _padding
    padding-right _padding
    &:not(:empty)
      padding-top _padding
      padding-bottom _padding
  &-description:not(:empty)
    margin-top 5px
    width 100%
  &-row
    display flex
    align-items center

// Light Theme [Columns]
{C}.-columns
  {C}-left
    font-size 14px
    font-weight bold
    color #999
    display flex
    align-items center
    //background-color rgba(black, 0.035)
    flex 1
    min-width 160px
    max-width 220px
    //&:after
    //  content ':'
  {C}-right
    display flex
    flex-wrap wrap
    align-items center
    font-size 12px
  {C}-description
    color #3e3f70
  {C}-input:focus ~ {C}-description
    color green

//{C}.-columns:nth-child(odd)
//  > {C}-left
//    background-color rgba(black, 0.01)

.InputArray
  &-item
    position relative
    box-shadow 1px 1px 4px 0 rgba(black, 0.3)
    background-image linear-gradient(120deg, rgba(black, 0.01) 0%, rgba(black, 0.02) 80%, rgba(black, 0.04) 100%)
    & + &
      margin-top 10px
  &-delete
    position absolute
    right 0
    top 0
    line-height 26px
    width 26px
    text-align center
    text-decoration none
    color #999
    transition all 0.2s
    &:hover
      background-color #f44336
      color white
  &-add
    width auto
    display block
    margin-left auto
    margin-right 10px
  &-item + &-add
    margin-top 10px

.InputArray .InputArray
  .InputArray-item
    margin-left 10px
    margin-right 10px